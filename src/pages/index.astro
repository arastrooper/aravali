    <script is:inline>
      const form = document.getElementById('joinForm');
      const btn = document.getElementById('submitBtn');
      const btnText = document.getElementById('btnText');
      const btnSpinner = document.getElementById('btnSpinner');
      const successModal = document.getElementById('successModal');

      if (form && btn && btnText && btnSpinner) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();

          // 1. Lock the UI
          btn.disabled = true;
          btnText.innerText = 'Joining...';
          btnSpinner.classList.remove('hidden');

          // 2. Prepare Data for Netlify
          const formData = new FormData(form);

          // 3. Send to Netlify via Fetch
          fetch('/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams(formData).toString(),
          })
            .then(() => {
              // 4. Success!
              // Reset form
              form.reset();
              // Show Modal
              if (successModal) successModal.classList.remove('hidden');
              // Reset Button
              btnText.innerText = 'Joined!';
              setTimeout(() => {
                btn.disabled = false;
                btnText.innerText = 'Join the Movement';
                btnSpinner.classList.add('hidden');
              }, 2000);
            })
            .catch(() => {
              alert('Something went wrong. Please try again.');
              btn.disabled = false;
              btnText.innerText = 'Try Again';
              btnSpinner.classList.add('hidden');
            });
        });
      }

      if (successModal) {
        const close = () => {
          successModal.classList.add('hidden');
        };

        successModal.querySelectorAll('[data-close]').forEach((el) => {
          el.addEventListener('click', close);
        });

        window.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') close();
        });
      }

      // Presentation fullscreen toggle
      const presentationContainer = document.getElementById('presentation-container');
      const presentationFullscreenBtn = document.getElementById('presentation-fullscreen-toggle');

      if (presentationContainer && presentationFullscreenBtn && document.fullscreenEnabled !== false) {
        const updatePresentationFsLabel = () => {
          const isFs = document.fullscreenElement === presentationContainer;
          presentationFullscreenBtn.querySelector('span').textContent = isFs ? 'Exit full screen' : 'Full screen';
        };

        presentationFullscreenBtn.addEventListener('click', () => {
          const isFs = document.fullscreenElement === presentationContainer;
          if (!isFs) {
            if (presentationContainer.requestFullscreen) {
              presentationContainer.requestFullscreen();
            }
          } else if (document.exitFullscreen) {
            document.exitFullscreen();
          }
        });

        document.addEventListener('fullscreenchange', updatePresentationFsLabel);
        updatePresentationFsLabel();
      }

      function switchMap(type) {
        const nasaMap = document.getElementById('map-nasa');
        const fabdemMap = document.getElementById('map-fabdem');
        const btnNasa = document.getElementById('btn-nasa');
        const btnFab = document.getElementById('btn-fabdem');
        const desc = document.getElementById('map-desc');

        if (!nasaMap || !fabdemMap || !btnNasa || !btnFab || !desc) return;

        if (type === 'nasa') {
          // Show NASA
          nasaMap.classList.remove('opacity-0', 'pointer-events-none');
          nasaMap.classList.add('opacity-100');
          fabdemMap.classList.add('opacity-0', 'pointer-events-none');
          fabdemMap.classList.remove('opacity-100');

          // Style Buttons
          btnNasa.classList.add('bg-aravali-pink', 'text-white', 'shadow-lg');
          btnNasa.classList.remove('text-white/60');
          btnFab.classList.remove('bg-aravali-pink', 'text-white', 'shadow-lg');
          btnFab.classList.add('text-white/60');

          // Update Text
          desc.innerHTML =
            'Showing <strong>NASA SRTM (v3)</strong> data. Standard geomorphic analysis representing the full hill structure (42.6% Loss).';
        } else {
          // Show FABDEM
          fabdemMap.classList.remove('opacity-0', 'pointer-events-none');
          fabdemMap.classList.add('opacity-100');
          nasaMap.classList.add('opacity-0', 'pointer-events-none');
          nasaMap.classList.remove('opacity-100');

          // Style Buttons
          btnFab.classList.add('bg-aravali-pink', 'text-white', 'shadow-lg');
          btnFab.classList.remove('text-white/60');
          btnNasa.classList.remove('bg-aravali-pink', 'text-white', 'shadow-lg');
          btnNasa.classList.add('text-white/60');

          // Update Text
          desc.innerHTML =
            'Showing <strong>Bristol FABDEM</strong> data. Bare-earth model excluding vegetation (31.9% Loss).';
        }
      }
    </script>
